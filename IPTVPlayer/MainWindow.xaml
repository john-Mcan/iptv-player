<Window x:Class="IPTVPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        xmlns:models="clr-namespace:IPTVPlayer.Models"
        Title="IPTV Player | Chucao" Height="700" Width="1100"
        MinHeight="480" MinWidth="720"
        Background="{StaticResource BgBrush}"
        Icon="{StaticResource ChucaoIcon}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ════════════════ HEADER BAR ════════════════ -->
        <Border x:Name="HeaderBar" Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                Padding="8,6" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Clock / Date -->
                <Border Grid.Column="0" Background="{StaticResource BgBrush}" CornerRadius="4"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        Padding="12,5" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                   Foreground="{StaticResource TextDimBrush}" Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="ClockText" FontSize="12"
                                   Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Content Tabs -->
                <Border Grid.Column="1" Background="{StaticResource BgBrush}" CornerRadius="4"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        Padding="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="LiveTvTab" Style="{StaticResource ContentTabBtn}"
                                     Content="LIVE TV" Tag="LiveTV" IsChecked="True"
                                     Click="ContentTab_Click"/>
                        <TextBlock Text="|" Foreground="{StaticResource TextDimBrush}"
                                   VerticalAlignment="Center" Margin="2,0" FontSize="14" Opacity="0.4"/>
                        <RadioButton x:Name="MoviesTab" Style="{StaticResource ContentTabBtn}"
                                     Content="MOVIES" Tag="Movies"
                                     Click="ContentTab_Click"/>
                        <TextBlock Text="|" Foreground="{StaticResource TextDimBrush}"
                                   VerticalAlignment="Center" Margin="2,0" FontSize="14" Opacity="0.4"/>
                        <RadioButton x:Name="SeriesTab" Style="{StaticResource ContentTabBtn}"
                                     Content="SERIES" Tag="Series"
                                     Click="ContentTab_Click"/>
                    </StackPanel>
                </Border>

                <!-- M3U Selector + Settings -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource BgBrush}" CornerRadius="4"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            Padding="4,2">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="UrlBox" Style="{StaticResource UrlCombo}" Width="240"
                                      Text="{Binding PlaylistUrl, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding RecentUrls}"
                                      VerticalContentAlignment="Center"
                                      KeyDown="UrlBox_KeyDown">
                                <ComboBox.ToolTip>URL de playlist M3U</ComboBox.ToolTip>
                            </ComboBox>
                            <Button Content="Cargar" Style="{StaticResource AccentBtn}"
                                    Margin="4,0,2,0" Padding="10,4"
                                    Command="{Binding LoadPlaylistCommand}"/>
                        </StackPanel>
                    </Border>
                    <Button Style="{StaticResource IconBtn}" Content="&#xE713;"
                            Margin="6,0,0,0" Click="Settings_Click">
                        <Button.ToolTip>Configuración</Button.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ════════════════ MAIN CONTENT ════════════════ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ──── LEFT SIDEBAR ──── -->
            <Border x:Name="LeftSidebar" Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <!-- Loading indicator (all tabs) -->
                    <ProgressBar IsIndeterminate="True" Height="3" VerticalAlignment="Top" Panel.ZIndex="10"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                                 Foreground="{StaticResource AccentBrush}"
                                 Background="Transparent" BorderThickness="0"/>

                    <!-- ═══ LIVE TV SIDEBAR ═══ -->
                    <Grid Visibility="{Binding IsLiveTvActive, Converter={StaticResource BoolToVis}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MaxHeight="200"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Favorites / Recent -->
                        <Border Grid.Row="0" Background="{StaticResource BgBrush}" CornerRadius="4"
                                Margin="6,6,6,2" Padding="10,8" MaxHeight="320">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top">
                                    <!-- FAVORITOS -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,6,0"/>
                                        <TextBlock Text="FAVORITOS" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextDimBrush}"/>
                                        <Button Style="{StaticResource TextBtn}" Content="Ver todo" Margin="8,0,0,0"
                                                HorizontalAlignment="Right" FontSize="10" Padding="0"
                                                Command="{Binding OpenFullListCommand}" CommandParameter="LiveTvFavorites"
                                                Visibility="{Binding HasLiveTvFavorites, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    <TextBlock Text="Sin favoritos aún" FontSize="11"
                                               Foreground="#404048" FontStyle="Italic" Margin="17,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasLiveTvFavorites}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,8">
                                        <ItemsControl ItemsSource="{Binding LiveTvFavoritesPreview}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="44" Height="44" Margin="2" CornerRadius="6"
                                                            Background="{StaticResource SurfaceHighBrush}" ClipToBounds="True"
                                                            Cursor="Hand" ToolTip="{Binding Name}"
                                                            MouseLeftButtonDown="FavoriteItem_Click">
                                                        <Grid>
                                                            <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="16" Foreground="#303035"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=48, IsAsync=True}"
                                                                   Stretch="UniformToFill"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,8"/>

                                    <!-- VISTOS RECIENTEMENTE -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,6,0"/>
                                        <TextBlock Text="VISTOS RECIENTEMENTE" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextDimBrush}"/>
                                        <Button Style="{StaticResource TextBtn}" Content="Ver todo" Margin="8,0,0,0"
                                                HorizontalAlignment="Right" FontSize="10" Padding="0"
                                                Command="{Binding OpenFullListCommand}" CommandParameter="RecentLiveTv"
                                                Visibility="{Binding HasRecentLiveTv, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    <TextBlock Text="Sin historial" FontSize="11"
                                               Foreground="#404048" FontStyle="Italic" Margin="17,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasRecentLiveTv}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,4">
                                    <ItemsControl ItemsSource="{Binding RecentLiveTvPreview}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,1" Padding="4,3" CornerRadius="3" Cursor="Hand"
                                                            MouseLeftButtonDown="HistoryItem_Click">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Grid Width="22" Height="22" Margin="0,0,6,0">
                                                                <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets"
                                                                           FontSize="12" Foreground="#303035"
                                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=24, IsAsync=True}"
                                                                       Width="22" Height="22" Stretch="UniformToFill"
                                                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                                            </Grid>
                                                            <TextBlock Text="{Binding Name}" FontSize="11"
                                                                       Foreground="{StaticResource TextBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis" MaxWidth="170"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                </ScrollViewer>
                            </DockPanel>
                        </Border>

                        <!-- Channel count -->
                        <TextBlock Grid.Row="1" Margin="12,8,12,2"
                                   Foreground="{StaticResource TextDimBrush}" FontSize="11">
                            <Run Text="CANALES"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding LiveTvChannelCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                        </TextBlock>

                        <!-- Search -->
                        <Grid Grid.Row="2" Margin="6,2,6,4">
                            <TextBox Style="{StaticResource SearchTextBoxStyle}" Tag="Buscar canal..."
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="28,6,8,6" VerticalContentAlignment="Center"/>
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                       Foreground="{StaticResource TextDimBrush}"
                                       VerticalAlignment="Center" Margin="9,0,0,0"
                                       IsHitTestVisible="False"/>
                        </Grid>

                        <!-- Channel TreeView -->
                        <TreeView x:Name="ChannelTree" Grid.Row="3" Margin="0,2,0,0"
                                  ItemsSource="{Binding FilteredLiveTvGroups}"
                                  SelectedItemChanged="ChannelTree_SelectedItemChanged">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Channels}">
                                    <StackPanel Orientation="Horizontal" Margin="2,2">
                                        <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="12" Margin="0,0,6,0"
                                                   Foreground="{StaticResource AccentBrush}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"
                                                   Foreground="{StaticResource TextBrush}"/>
                                        <TextBlock Foreground="{StaticResource TextDimBrush}" FontSize="11"
                                                   VerticalAlignment="Center" Margin="4,0,0,0"
                                                   Text="{Binding Channels.Count, StringFormat=' ({0})'}"/>
                                    </StackPanel>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="2,1">
                                                <Grid Width="24" Height="24" Margin="0,0,6,0" VerticalAlignment="Center">
                                                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{StaticResource TextDimBrush}"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=30, IsAsync=True}"
                                                           Width="24" Height="24" Stretch="UniformToFill"
                                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Grid>
                                                <TextBlock Text="{Binding Name}" FontSize="13"
                                                           Foreground="{StaticResource TextBrush}"
                                                           VerticalAlignment="Center"/>
                                                <!-- Favorite star -->
                                                <Button Margin="4,0,0,0" Padding="2" MinWidth="0" MinHeight="0"
                                                        Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}" VerticalAlignment="Center">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource IconBtn}">
                                                            <Setter Property="Padding" Value="2"/>
                                                            <Setter Property="MinWidth" Value="0"/>
                                                            <Setter Property="MinHeight" Value="0"/>
                                                            <Setter Property="Visibility" Value="Hidden"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=StackPanel}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Grid>
                                                        <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                                   Foreground="{StaticResource TextDimBrush}"
                                                                   Visibility="{Binding IsFavorite, Converter={StaticResource InvBoolToVis}}"/>
                                                        <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                                   Foreground="{StaticResource AccentBrush}"
                                                                   Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                                    </Grid>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>

                    <!-- ═══ MOVIES SIDEBAR ═══ -->
                    <Grid Visibility="{Binding IsMoviesActive, Converter={StaticResource BoolToVis}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Favorites / Continue watching -->
                        <Border Grid.Row="0" Background="{StaticResource BgBrush}" CornerRadius="4"
                                Margin="6,6,6,2" Padding="10,8" MaxHeight="320">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top">
                                    <!-- FAVORITOS -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,6,0"/>
                                        <TextBlock Text="FAVORITOS" FontSize="11" FontWeight="SemiBold"
                                                    Foreground="{StaticResource TextDimBrush}"/>
                                        <Button Style="{StaticResource TextBtn}" Content="Ver todo" Margin="8,0,0,0"
                                                HorizontalAlignment="Right" FontSize="10" Padding="0"
                                                Command="{Binding OpenFullListCommand}" CommandParameter="MovieFavorites"
                                                Visibility="{Binding HasMovieFavorites, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    <TextBlock Text="Sin favoritos aún" FontSize="11"
                                               Foreground="#404048" FontStyle="Italic" Margin="17,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasMovieFavorites}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,8">
                                        <ItemsControl ItemsSource="{Binding MovieFavoritesPreview}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="44" Height="60" Margin="2" CornerRadius="4"
                                                            Background="{StaticResource SurfaceHighBrush}" ClipToBounds="True"
                                                            Cursor="Hand" ToolTip="{Binding Name}"
                                                            MouseLeftButtonDown="FavoriteItem_Click">
                                                        <Grid>
                                                            <TextBlock Text="&#xE8B2;" FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="14" Foreground="#303035"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=60, IsAsync=True}"
                                                                   Stretch="UniformToFill"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,8"/>

                                    <!-- CONTINUAR VIENDO -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,6,0"/>
                                        <TextBlock Text="CONTINUAR VIENDO" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextDimBrush}"/>
                                        <Button Style="{StaticResource TextBtn}" Content="Ver todo" Margin="8,0,0,0"
                                                HorizontalAlignment="Right" FontSize="10" Padding="0"
                                                Command="{Binding OpenFullListCommand}" CommandParameter="ContinueWatchingMovies"
                                                Visibility="{Binding HasContinueWatchingMovies, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    <TextBlock Text="Sin contenido pendiente" FontSize="11"
                                               Foreground="#404048" FontStyle="Italic" Margin="17,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasContinueWatchingMovies}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,4">
                                    <ItemsControl ItemsSource="{Binding ContinueWatchingMoviesPreview}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,2" CornerRadius="4" Cursor="Hand" ClipToBounds="True"
                                                            MouseLeftButtonDown="ContinueWatchingItem_Click">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#40E8752A"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" Margin="4,3">
                                                                <Grid Width="32" Height="44" Margin="0,0,6,0">
                                                                    <Border Background="#202025" CornerRadius="3" ClipToBounds="True">
                                                                        <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=40, IsAsync=True}"
                                                                               Stretch="UniformToFill"
                                                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                                                    </Border>
                                                                </Grid>
                                                                <StackPanel VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding Name}" FontSize="11"
                                                                               Foreground="{StaticResource TextBrush}"
                                                                               TextTrimming="CharacterEllipsis" MaxWidth="150"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                            <ProgressBar Height="3" VerticalAlignment="Bottom"
                                                                         Value="{Binding ProgressPercent, Mode=OneWay}"
                                                                         Maximum="100" Minimum="0"
                                                                         Foreground="{StaticResource AccentBrush}"
                                                                         Background="#333" BorderThickness="0"/>
                                                            
                                                            <!-- Remove Button -->
                                                            <Button Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Margin="0,4,4,0" Cursor="Hand" Padding="0"
                                                                    Command="{Binding DataContext.RemoveHistoryEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}" ToolTip="Quitar de la lista"
                                                                    Opacity="0.25">
                                                                <Button.Style>
                                                                    <Style TargetType="Button" BasedOn="{StaticResource IconBtn}">
                                                                        <Setter Property="Opacity" Value="0.25"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Opacity" Value="1"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <Border Background="#B2000000" CornerRadius="10">
                                                                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="8"
                                                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                </ScrollViewer>
                            </DockPanel>
                        </Border>

                        <!-- Category header -->
                        <TextBlock Grid.Row="1" Margin="12,8,12,2"
                                   Foreground="{StaticResource TextDimBrush}" FontSize="11">
                            <Run Text="CATEGORÍAS DE PELÍCULAS"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding MovieCategoryList.Count, Mode=OneWay}"/>
                            <Run Text=")"/>
                        </TextBlock>

                        <!-- Category list -->
                        <ListBox Grid.Row="2" Margin="4,2,4,4"
                                 ItemsSource="{Binding MovieCategoryList}"
                                 SelectedItem="{Binding SelectedMovieCategory}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" FontSize="13"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="1" FontSize="11"
                                                   Foreground="{StaticResource TextDimBrush}"
                                                   VerticalAlignment="Center" Margin="6,0,0,0"
                                                   Text="{Binding Channels.Count, StringFormat='({0})'}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <!-- ═══ SERIES SIDEBAR ═══ -->
                    <Grid Visibility="{Binding IsSeriesActive, Converter={StaticResource BoolToVis}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Favorites / Continue watching -->
                        <Border Grid.Row="0" Background="{StaticResource BgBrush}" CornerRadius="4"
                                Margin="6,6,6,2" Padding="10,8" MaxHeight="320">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top">
                                    <!-- FAVORITOS -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,6,0"/>
                                        <TextBlock Text="FAVORITOS" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextDimBrush}"/>
                                        <Button Style="{StaticResource TextBtn}" Content="Ver todo" Margin="8,0,0,0"
                                                HorizontalAlignment="Right" FontSize="10" Padding="0"
                                                Command="{Binding OpenFullListCommand}" CommandParameter="SeriesFavorites"
                                                Visibility="{Binding HasSeriesFavorites, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    <TextBlock Text="Sin favoritos aún" FontSize="11"
                                               Foreground="#404048" FontStyle="Italic" Margin="17,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasSeriesFavorites}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,8">
                                        <ItemsControl ItemsSource="{Binding SeriesFavoritesPreview}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="44" Height="60" Margin="2" CornerRadius="4"
                                                            Background="{StaticResource SurfaceHighBrush}" ClipToBounds="True"
                                                            Cursor="Hand" ToolTip="{Binding Name}"
                                                            MouseLeftButtonDown="SeriesFavoriteItem_Click">
                                                        <Grid>
                                                            <TextBlock Text="&#xE786;" FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="14" Foreground="#303035"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=60, IsAsync=True}"
                                                                   Stretch="UniformToFill"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,8"/>

                                    <!-- CONTINUAR VIENDO -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,6,0"/>
                                        <TextBlock Text="CONTINUAR VIENDO" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextDimBrush}"/>
                                        <Button Style="{StaticResource TextBtn}" Content="Ver todo" Margin="8,0,0,0"
                                                HorizontalAlignment="Right" FontSize="10" Padding="0"
                                                Command="{Binding OpenFullListCommand}" CommandParameter="ContinueWatchingSeries"
                                                Visibility="{Binding HasContinueWatchingSeries, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    <TextBlock Text="Sin contenido pendiente" FontSize="11"
                                               Foreground="#404048" FontStyle="Italic" Margin="17,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasContinueWatchingSeries}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,4">
                                    <ItemsControl ItemsSource="{Binding ContinueWatchingSeriesPreview}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,2" CornerRadius="4" Cursor="Hand" ClipToBounds="True"
                                                            MouseLeftButtonDown="ContinueWatchingItem_Click">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#40E8752A"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" Margin="4,3">
                                                                <Grid Width="32" Height="44" Margin="0,0,6,0">
                                                                    <Border Background="#202025" CornerRadius="3" ClipToBounds="True">
                                                                        <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=40, IsAsync=True}"
                                                                               Stretch="UniformToFill"
                                                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                                                    </Border>
                                                                </Grid>
                                                                <StackPanel VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding Name}" FontSize="11"
                                                                               Foreground="{StaticResource TextBrush}"
                                                                               TextTrimming="CharacterEllipsis" MaxWidth="150"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                            <ProgressBar Height="3" VerticalAlignment="Bottom"
                                                                         Value="{Binding ProgressPercent, Mode=OneWay}"
                                                                         Maximum="100" Minimum="0"
                                                                         Foreground="{StaticResource AccentBrush}"
                                                                         Background="#333" BorderThickness="0"/>
                                                            
                                                            <!-- Remove Button -->
                                                            <Button Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Margin="0,4,4,0" Cursor="Hand" Padding="0"
                                                                    Command="{Binding DataContext.RemoveHistoryEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}" ToolTip="Quitar de la lista">
                                                                <Button.Style>
                                                                    <Style TargetType="Button" BasedOn="{StaticResource IconBtn}">
                                                                        <Setter Property="Opacity" Value="0.25"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Opacity" Value="1"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <Border Background="#B2000000" CornerRadius="10">
                                                                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="8"
                                                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                </ScrollViewer>
                            </DockPanel>
                        </Border>

                        <!-- Category header -->
                        <TextBlock Grid.Row="1" Margin="12,8,12,2"
                                   Foreground="{StaticResource TextDimBrush}" FontSize="11">
                            <Run Text="CATEGORÍAS DE SERIES"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding SeriesCategoryList.Count, Mode=OneWay}"/>
                            <Run Text=")"/>
                        </TextBlock>

                        <!-- Category list -->
                        <ListBox Grid.Row="2" Margin="4,2,4,4"
                                 ItemsSource="{Binding SeriesCategoryList}"
                                 SelectedItem="{Binding SelectedSeriesCategory}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" FontSize="13"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="1" FontSize="11"
                                                   Foreground="{StaticResource TextDimBrush}"
                                                   VerticalAlignment="Center" Margin="6,0,0,0"
                                                   Text="{Binding Channels.Count, StringFormat='({0})'}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <!-- Error Message (all tabs) -->
                    <Border VerticalAlignment="Bottom" Margin="8" CornerRadius="4"
                            Background="#33EF4444" Padding="10,6" Panel.ZIndex="10">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="{StaticResource ErrorBrush}"
                                   TextWrapping="Wrap" FontSize="12"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Sidebar Splitter -->
            <GridSplitter x:Name="SidebarSplitter" Grid.Column="1" Width="3"
                          Background="{StaticResource BorderBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- ──── CENTER AREA ──── -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" MinHeight="180"/>
                    <RowDefinition x:Name="SplitterRow" Height="Auto"/>
                    <RowDefinition x:Name="BelowVideoRow" Height="2*" MinHeight="100"/>
                </Grid.RowDefinitions>

                <!-- Video Player -->
                <Grid Grid.Row="0" Background="Black">
                    <vlc:VideoView x:Name="VideoView">
                        <Grid x:Name="VideoOverlay"
                              MouseMove="VideoOverlay_MouseMove"
                              MouseDown="VideoOverlay_MouseDown">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Player.HasMedia}" Value="True">
                                            <Setter Property="Background" Value="#01000000"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Player.IsMediaLoading}" Value="True">
                                            <Setter Property="Background" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Player.IsPipActive}" Value="True">
                                            <Setter Property="Background" Value="Black"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <!-- Placeholder when no media -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Player.ShowNoMediaPlaceholder}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="&#xE714;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="48" Foreground="#404048"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Selecciona un canal para reproducir"
                                           Foreground="#505058" FontSize="14" Margin="0,12,0,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Loading overlay -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Visibility="{Binding Player.IsMediaLoading, Converter={StaticResource BoolToVis}}">
                                <ProgressBar IsIndeterminate="True" Height="4" Width="100"
                                             Foreground="{StaticResource AccentBrush}"
                                             Background="{StaticResource SurfaceHighBrush}"
                                             BorderThickness="0" Margin="0,0,0,12"/>
                                <TextBlock Text="Cargando..."
                                           Foreground="#808088" FontSize="14"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- PiP overlay -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Visibility="{Binding Player.IsPipActive, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="&#xE8B2;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="48" Foreground="#404048"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Reproduciendo en Picture-in-Picture"
                                           Foreground="#505058" FontSize="14" Margin="0,12,0,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Reconnection overlay -->
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Background="#DD1A1A1E" CornerRadius="10" Padding="28,20"
                                    Visibility="{Binding Player.IsReconnecting, Converter={StaticResource BoolToVis}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets"
                                               FontSize="28" Foreground="{StaticResource AccentBrush}"
                                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <ProgressBar IsIndeterminate="True" Height="3" Width="140"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Background="{StaticResource SurfaceHighBrush}"
                                                 BorderThickness="0" Margin="0,0,0,12"/>
                                    <TextBlock Text="{Binding Player.ReconnectStatus}"
                                               Foreground="{StaticResource TextBrush}" FontSize="13"
                                               HorizontalAlignment="Center" Margin="0,0,0,14"/>
                                    <Button Content="Cancelar"
                                            Style="{StaticResource PlayerBtn}"
                                            Command="{Binding Player.CancelReconnectCommand}"
                                            HorizontalAlignment="Center" Padding="16,6"/>
                                </StackPanel>
                            </Border>

                            <!-- Next Episode overlay button -->
                            <Border HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                    Margin="0,0,24,100" CornerRadius="6" Cursor="Hand"
                                    Visibility="{Binding Player.ShowNextEpisodeButton, Converter={StaticResource BoolToVis}}">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding SkipToNextEpisodeCommand}"/>
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#DD1A1A1E"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#EE2A2A30"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal" Margin="14,8">
                                    <TextBlock Text="Siguiente capítulo" Foreground="White"
                                               FontSize="13" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="&#xE893;" FontFamily="Segoe MDL2 Assets"
                                               FontSize="16" Foreground="{StaticResource AccentBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Fullscreen overlay controls -->
                            <Border x:Name="FullscreenOverlay" VerticalAlignment="Bottom"
                                    Visibility="Collapsed" Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#00000000" Offset="0"/>
                                        <GradientStop Color="#CC000000" Offset="0.3"/>
                                        <GradientStop Color="#EE000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="16,30,16,10">
                                    <Slider x:Name="FsSeekSlider" Style="{StaticResource SeekSlider}"
                                            Value="{Binding Player.Position, Mode=TwoWay}"
                                            VerticalAlignment="Center" Margin="0,0,0,6"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" Style="{StaticResource IconBtn}"
                                                Command="{Binding Player.TogglePlayPauseCommand}" Margin="0,0,2,0">
                                            <Grid>
                                                <TextBlock Text="&#xE768;"
                                                           Visibility="{Binding Player.IsPlaying, Converter={StaticResource InvBoolToVis}}"/>
                                                <TextBlock Text="&#xE769;"
                                                           Visibility="{Binding Player.IsPlaying, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>

                                        <Button Grid.Column="1" Style="{StaticResource IconBtn}"
                                                Content="&#xE71A;"
                                                Command="{Binding Player.StopCommand}" Margin="0,0,6,0"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                            <TextBlock Foreground="{StaticResource TextDimBrush}" FontSize="12"
                                                       FontFamily="Consolas" VerticalAlignment="Center">
                                                <Run Text="{Binding Player.CurrentTime, Converter={StaticResource TimeToStr}, Mode=OneWay}"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding Player.Duration, Converter={StaticResource TimeToStr}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Margin="10,0,0,0" FontSize="11" VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextDimBrush}"
                                                       Visibility="{Binding Player.IsLive, Converter={StaticResource BoolToVis}}">
                                                <Run Text="&#x23FA;" Foreground="#EF4444"/>
                                                <Run Text=" EN VIVO"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <TextBlock Grid.Column="3" Text="{Binding Player.CurrentChannelName}"
                                                   Foreground="White" FontSize="12" VerticalAlignment="Center"
                                                   Margin="0,0,8,0" TextTrimming="CharacterEllipsis"/>

                                        <Button Grid.Column="4" Style="{StaticResource IconBtn}"
                                                Command="{Binding Player.ToggleMuteCommand}">
                                            <Grid>
                                                <TextBlock Text="&#xE767;"
                                                           Visibility="{Binding Player.IsMuted, Converter={StaticResource InvBoolToVis}}"/>
                                                <TextBlock Text="&#xE74F;"
                                                           Visibility="{Binding Player.IsMuted, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>

                                        <Slider Grid.Column="5" Style="{StaticResource VolumeSlider}"
                                                Value="{Binding Player.Volume, Mode=TwoWay}"
                                                Maximum="100" VerticalAlignment="Center" Margin="0,0,8,0"/>

                                        <ComboBox Grid.Column="6" Style="{StaticResource DarkCombo}"
                                                  ItemsSource="{Binding Player.AudioTracks}"
                                                  SelectedItem="{Binding Player.SelectedAudioTrack}"
                                                  DisplayMemberPath="Name" Margin="0,0,4,0">
                                            <ComboBox.ToolTip>Pista de Audio</ComboBox.ToolTip>
                                        </ComboBox>

                                        <ComboBox Grid.Column="7" Style="{StaticResource DarkCombo}"
                                                  ItemsSource="{Binding Player.SubtitleTracks}"
                                                  SelectedItem="{Binding Player.SelectedSubtitleTrack}"
                                                  DisplayMemberPath="Name" Margin="0,0,4,0">
                                            <ComboBox.ToolTip>Subtítulos</ComboBox.ToolTip>
                                        </ComboBox>

                                        <Button Grid.Column="8" Style="{StaticResource IconBtn}"
                                                Click="Fullscreen_Click">
                                            <Button.ToolTip>Salir de Pantalla Completa (Esc)</Button.ToolTip>
                                            <TextBlock Text="&#xE73F;"/>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <!-- Full List View Overlay -->
                            <Border x:Name="FullListView" Background="{StaticResource SurfaceBrush}"
                                    Visibility="{Binding IsViewingFullList, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16,12">
                                        <Grid>
                                            <TextBlock Text="{Binding FullListTitle}" FontSize="18" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                                            <Button Style="{StaticResource IconBtn}" Content="&#xE711;" HorizontalAlignment="Right"
                                                    Command="{Binding CloseFullListCommand}" Padding="8" ToolTip="Cerrar"/>
                                        </Grid>
                                    </Border>
                                    <Grid Grid.Row="1" Margin="8">
                                        <!-- Empty state text -->
                                        <TextBlock Text="La lista está vacía" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontSize="18" Foreground="#808088">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ActiveFullList.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        
                                        <ListBox ItemsSource="{Binding ActiveFullList}" Background="Transparent" BorderThickness="0">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <vwp:VirtualizingWrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListBoxItem">
                                                            <ContentPresenter/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <ContentControl Content="{Binding}">
                                                    <ContentControl.Resources>
                                                        <!-- Template for Channel -->
                                                        <DataTemplate DataType="{x:Type models:Channel}">
                                                            <Border Width="160" Margin="6" CornerRadius="6" ClipToBounds="True" Background="{StaticResource SurfaceHighBrush}" Cursor="Hand">
                                                                <Border.InputBindings>
                                                                    <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.PlayFromFullListCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                                                                </Border.InputBindings>
                                                                <Grid Height="220" ClipToBounds="True">
                                                                    <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=220, IsAsync=True}" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                                    <Border VerticalAlignment="Bottom" Background="#B2000000" Padding="8,6">
                                                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" TextWrapping="Wrap" MaxHeight="36" TextTrimming="CharacterEllipsis"/>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                        <!-- Template for WatchHistoryEntry -->
                                                        <DataTemplate DataType="{x:Type models:WatchHistoryEntry}">
                                                            <Border Width="160" Margin="6" CornerRadius="6" ClipToBounds="True" Background="{StaticResource SurfaceHighBrush}" Cursor="Hand">
                                                                <Border.InputBindings>
                                                                    <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.PlayFromFullListCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                                                                </Border.InputBindings>
                                                                <Grid Height="220" ClipToBounds="True">
                                                                    <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=220, IsAsync=True}" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                                    <Border VerticalAlignment="Bottom" Background="#B2000000" Padding="8,6">
                                                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" TextWrapping="Wrap" MaxHeight="36" TextTrimming="CharacterEllipsis"/>
                                                                    </Border>
                                                                    <ProgressBar Height="4" VerticalAlignment="Bottom" Value="{Binding ProgressPercent, Mode=OneWay}" Maximum="100" Minimum="0" Foreground="{StaticResource AccentBrush}" Background="#333" BorderThickness="0"/>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ContentControl.Resources>
                                                </ContentControl>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- ════════════════ PLAYER CONTROLS (Floating) ════════════════ -->
                            <Border x:Name="ControlsBar" VerticalAlignment="Bottom" Background="#E6101015"
                                    Margin="20,0,20,20" Padding="12,10" CornerRadius="8"
                                    BorderBrush="#30FFFFFF" BorderThickness="1"
                                    Visibility="{Binding IsViewingFullList, Converter={StaticResource InvBoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Style="{StaticResource IconBtn}"
                                            Command="{Binding Player.TogglePlayPauseCommand}" Margin="0,0,6,0" Padding="8" Width="36" Height="36">
                                        <Grid>
                                            <TextBlock Text="&#xE768;" FontSize="16"
                                                       Visibility="{Binding Player.IsPlaying, Converter={StaticResource InvBoolToVis}}"/>
                                            <TextBlock Text="&#xE769;" FontSize="16"
                                                       Visibility="{Binding Player.IsPlaying, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                    </Button>

                                    <Button Grid.Column="1" Style="{StaticResource IconBtn}"
                                            Content="&#xE71A;" FontSize="16" Padding="8" Width="36" Height="36"
                                            Command="{Binding Player.StopCommand}" Margin="0,0,12,0"/>

                                    <Slider x:Name="SeekSlider" Grid.Column="2"
                                            Style="{StaticResource SeekSlider}"
                                            Value="{Binding Player.Position, Mode=TwoWay}"
                                            VerticalAlignment="Center" Margin="12,0"/>

                                    <TextBlock Grid.Column="3" VerticalAlignment="Center" Margin="12,0"
                                               Foreground="{StaticResource TextDimBrush}" FontSize="12"
                                               FontFamily="Consolas">
                                        <Run Text="{Binding Player.CurrentTime, Converter={StaticResource TimeToStr}, Mode=OneWay}" Foreground="White"/>
                                        <Run Text="/"/>
                                        <Run Text="{Binding Player.Duration, Converter={StaticResource TimeToStr}, Mode=OneWay}"/>
                                    </TextBlock>

                                    <Button Grid.Column="4" Style="{StaticResource IconBtn}" Margin="12,0,0,0" Padding="8" Width="32" Height="32"
                                            Command="{Binding Player.ToggleMuteCommand}">
                                        <Grid>
                                            <TextBlock Text="&#xE767;" FontSize="14"
                                                       Visibility="{Binding Player.IsMuted, Converter={StaticResource InvBoolToVis}}"/>
                                            <TextBlock Text="&#xE74F;" FontSize="14"
                                                       Visibility="{Binding Player.IsMuted, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                    </Button>

                                    <Slider Grid.Column="5" Style="{StaticResource VolumeSlider}" Width="100"
                                            Value="{Binding Player.Volume, Mode=TwoWay}"
                                            Maximum="100" VerticalAlignment="Center" Margin="8,0,16,0"/>

                                    <ComboBox Grid.Column="6" Style="{StaticResource DarkCombo}"
                                              ItemsSource="{Binding Player.AudioTracks}"
                                              SelectedItem="{Binding Player.SelectedAudioTrack}"
                                              DisplayMemberPath="Name" Margin="0,0,8,0" Width="120">
                                        <ComboBox.ToolTip>Pista de Audio</ComboBox.ToolTip>
                                    </ComboBox>

                                    <ComboBox Grid.Column="7" Style="{StaticResource DarkCombo}"
                                              ItemsSource="{Binding Player.SubtitleTracks}"
                                              SelectedItem="{Binding Player.SelectedSubtitleTrack}"
                                              DisplayMemberPath="Name" Margin="0,0,16,0" Width="120">
                                        <ComboBox.ToolTip>Subtítulos</ComboBox.ToolTip>
                                    </ComboBox>

                                    <Button Grid.Column="8" Style="{StaticResource IconBtn}" Padding="8" Width="32" Height="32"
                                            Content="&#xE8A7;" Click="PiP_Click" Margin="0,0,6,0">
                                        <Button.ToolTip>Picture in Picture</Button.ToolTip>
                                    </Button>

                                    <Button Grid.Column="9" Style="{StaticResource IconBtn}" Padding="8" Width="32" Height="32"
                                            Click="Fullscreen_Click">
                                        <Button.ToolTip>Pantalla Completa (F11)</Button.ToolTip>
                                        <Grid>
                                            <TextBlock x:Name="FsIconExpand" Text="&#xE740;"/>
                                            <TextBlock x:Name="FsIconRestore" Text="&#xE73F;" Visibility="Collapsed"/>
                                        </Grid>
                                    </Button>
                                </Grid>
                            </Border>

                        </Grid>
                    </vlc:VideoView>
                </Grid>

                <!-- Horizontal Splitter -->
                <GridSplitter x:Name="HorizontalSplitter" Grid.Row="1" Height="4" HorizontalAlignment="Stretch"
                              Background="{StaticResource BorderBrush}"
                              ResizeDirection="Rows" Cursor="SizeNS"/>

                <!-- Below-Video Content -->

                <!-- EPG (Live TV) -->
                <Border Grid.Row="2"
                        Visibility="{Binding IsLiveTvActive, Converter={StaticResource BoolToVis}}"
                        Background="{StaticResource SurfaceBrush}" Margin="2">
                    <Grid>
                        <!-- EPG placeholder (no data) -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasEpgData}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsEpgLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                                       HorizontalAlignment="Center" Foreground="{StaticResource TextDimBrush}"/>
                            <TextBlock Text="EPG" FontSize="20" FontWeight="Bold" Margin="0,8,0,2"
                                       HorizontalAlignment="Center" Foreground="{StaticResource TextDimBrush}"/>
                            <TextBlock Text="Guía de Programación" FontSize="12"
                                       HorizontalAlignment="Center" Foreground="{StaticResource TextDimBrush}"/>
                        </StackPanel>

                        <!-- EPG loading -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding IsEpgLoading, Converter={StaticResource BoolToVis}}">
                            <ProgressBar IsIndeterminate="True" Height="3" Width="160"
                                         Foreground="{StaticResource AccentBrush}"
                                         Background="{StaticResource SurfaceHighBrush}" BorderThickness="0"/>
                            <TextBlock Text="Cargando EPG..." FontSize="12" Margin="0,8,0,0"
                                       HorizontalAlignment="Center" Foreground="{StaticResource TextDimBrush}"/>
                        </StackPanel>

                        <!-- EPG programmes list -->
                        <Grid>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasEpgData}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,6,10,2">
                                <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,6,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="GUÍA DE PROGRAMACIÓN" FontSize="11" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled" Margin="6,2,6,6">
                                <ItemsControl ItemsSource="{Binding CurrentEpgProgrammes}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="170" Margin="3" Padding="8,6" CornerRadius="6"
                                                    ToolTip="{Binding Description}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCurrentlyAiring}" Value="True">
                                                                <Setter Property="Background" Value="#30E8752A"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#45E8752A"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding TimeRange}" FontSize="11"
                                                               Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Title}" FontSize="12"
                                                               Foreground="{StaticResource TextBrush}"
                                                               TextTrimming="CharacterEllipsis" TextWrapping="Wrap"
                                                               MaxHeight="36" Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Movies grid -->
                <Grid Grid.Row="2"
                      Visibility="{Binding IsMoviesActive, Converter={StaticResource BoolToVis}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search + Sort -->
                    <Grid Grid.Row="0" Margin="6,4,6,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <TextBox Style="{StaticResource SearchTextBoxStyle}" Tag="Buscar película..."
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="28,6,8,6" VerticalContentAlignment="Center"/>
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                       Foreground="{StaticResource TextDimBrush}"
                                       VerticalAlignment="Center" Margin="9,0,0,0"
                                       IsHitTestVisible="False"/>
                        </Grid>
                        <ComboBox Grid.Column="1" Style="{StaticResource DarkCombo}"
                                  SelectedIndex="{Binding SelectedSortOption}"
                                  Margin="6,0,0,0" Width="130" VerticalAlignment="Center">
                            <ComboBoxItem Content="Más recientes" />
                            <ComboBoxItem Content="A - Z" />
                            <ComboBoxItem Content="Z - A" />
                        </ComboBox>
                    </Grid>

                    <!-- Movie grid -->
                    <ListBox x:Name="MovieGrid" Grid.Row="1"
                             ItemsSource="{Binding FilteredMovies}"
                             SelectionChanged="ContentGrid_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <vwp:VirtualizingWrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="130" Margin="4" CornerRadius="6" ClipToBounds="True" Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="220" ClipToBounds="True">
                                        <!-- Full background image -->
                                        <TextBlock Text="&#xE8B2;" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="36" Foreground="#606068"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="-1"/>
                                        <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=200, IsAsync=True}"
                                               Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <!-- Favorite star overlay -->
                                        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                                Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconBtn}">
                                                    <Setter Property="Padding" Value="3"/>
                                                    <Setter Property="MinWidth" Value="0"/>
                                                    <Setter Property="MinHeight" Value="0"/>
                                                    <Setter Property="Background" Value="#80000000"/>
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Grid>
                                                <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                                           Foreground="#AAAAAA"
                                                           Visibility="{Binding IsFavorite, Converter={StaticResource InvBoolToVis}}"/>
                                                <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>

                                        <!-- Text overlay at the bottom that grows up -->
                                        <Border VerticalAlignment="Bottom" Background="#D916161A" Padding="8,8,8,6">
                                            <TextBlock Text="{Binding Name}" FontSize="12"
                                                       Foreground="{StaticResource TextBrush}"
                                                       TextWrapping="Wrap"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <TextBlock Grid.Row="1" Text="No hay películas disponibles"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="14" Foreground="#505058">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FilteredMovies.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Series grid -->
                <Grid Grid.Row="2"
                      Visibility="{Binding IsSeriesActive, Converter={StaticResource BoolToVis}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Breadcrumb / Back navigation -->
                    <Border Grid.Row="0" Margin="6,4,6,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanNavigateSeriesBack}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource IconBtn}" Content="&#xE72B;"
                                    Command="{Binding NavigateSeriesBackCommand}"
                                    Padding="4" MinWidth="28" MinHeight="28" Margin="0,0,4,0"
                                    FontSize="14"/>
                            <TextBlock Text="{Binding SeriesBreadcrumb}" FontSize="13"
                                       Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>

                    <!-- Search + Sort -->
                    <Grid Grid.Row="1" Margin="6,4,6,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <TextBox Style="{StaticResource SearchTextBoxStyle}" Tag="Buscar serie..."
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="28,6,8,6" VerticalContentAlignment="Center"/>
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                       Foreground="{StaticResource TextDimBrush}"
                                       VerticalAlignment="Center" Margin="9,0,0,0"
                                       IsHitTestVisible="False"/>
                        </Grid>
                        <ComboBox Grid.Column="1" Style="{StaticResource DarkCombo}"
                                  SelectedIndex="{Binding SelectedSortOption}"
                                  Margin="6,0,0,0" Width="130" VerticalAlignment="Center">
                            <ComboBoxItem Content="Más recientes" />
                            <ComboBoxItem Content="A - Z" />
                            <ComboBoxItem Content="Z - A" />
                        </ComboBox>
                    </Grid>

                    <!-- Series grid -->
                    <ListBox x:Name="SeriesGrid" Grid.Row="2"
                             ItemsSource="{Binding FilteredSeries}"
                             SelectionChanged="SeriesGrid_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <vwp:VirtualizingWrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="130" Margin="4" CornerRadius="6" ClipToBounds="True" Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="220" ClipToBounds="True">
                                        <!-- Full background image -->
                                        <TextBlock Text="&#xE786;" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="36" Foreground="#606068"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="-1"/>
                                        <Image Source="{Binding LogoUrl, Converter={StaticResource ImgLoad}, ConverterParameter=200, IsAsync=True}"
                                               Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <!-- Favorite star overlay -->
                                        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                                Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconBtn}">
                                                    <Setter Property="Padding" Value="3"/>
                                                    <Setter Property="MinWidth" Value="0"/>
                                                    <Setter Property="MinHeight" Value="0"/>
                                                    <Setter Property="Background" Value="#80000000"/>
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Grid>
                                                <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                                           Foreground="#AAAAAA"
                                                           Visibility="{Binding IsFavorite, Converter={StaticResource InvBoolToVis}}"/>
                                                <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>

                                        <!-- Text overlay at the bottom that grows up -->
                                        <Border VerticalAlignment="Bottom" Background="#D916161A" Padding="8,8,8,6">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontSize="12"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextWrapping="Wrap" Margin="0,0,0,2"/>
                                                <TextBlock Text="{Binding GroupTitle}" FontSize="10"
                                                           Foreground="{StaticResource TextDimBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <TextBlock Grid.Row="2" Text="No hay series disponibles"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="14" Foreground="#505058">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FilteredSeries.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>


        </Grid>


        <!-- ════════════════ STATUS BAR ════════════════ -->
        <Border x:Name="StatusBar" Grid.Row="3" Background="{StaticResource BgBrush}" Padding="10,4"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock Text="{Binding Player.StatusText}"
                           Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                <TextBlock HorizontalAlignment="Right" FontSize="11"
                           Foreground="{StaticResource TextDimBrush}"
                           Visibility="{Binding Player.IsLive, Converter={StaticResource BoolToVis}}">
                    <Run Text="&#x23FA;" Foreground="#EF4444"/>
                    <Run Text=" EN VIVO"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
